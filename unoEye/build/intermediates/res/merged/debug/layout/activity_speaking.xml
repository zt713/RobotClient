<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffbebebe" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:id="@+id/big_camera"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="30.0dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/speak_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20.0dip"
                android:background="@drawable/btn_bg_camera" />

            <Button
                android:id="@+id/speak_hang_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:background="@drawable/btn_bg_hangup2" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/local_camera"
            android:layout_width="241.0dip"
            android:layout_height="156.0dip"
            android:layout_gravity="top|right|center"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/img_novideo_bg" />
    </FrameLayout>

</RelativeLayout>